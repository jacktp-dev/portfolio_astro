---
import FbIcon from "./icons/social/FbIcon.astro";
import GhIcon from "./icons/social/GhIcon.astro";
import IgIcon from "./icons/social/IgIcon.astro";
import LkIcon from "./icons/social/LkIcon.astro";
import Button from "./buttons/Button.astro";

const primary = true;
---

<section class="mt-[106px]">
    <img src="" alt="">
    <h2>Hola, soy Jack</h2>
    <h1>Diseñador y desarrollador web</h1>
    <p>Me especializo en diseño UI y desarrollo web <br> Listo para trabajar en tu proyecto</p>
    <div>
        <FbIcon/>
        <IgIcon/>
        <LkIcon/>
        <GhIcon/>
    </div>

    <div class="flex w-full justify-between gap-4" >
        
        <Button text="Mis proyectos" primary={primary}/>
        <Button text="Descargar CV" primary={!primary}>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="16" viewBox="0 0 18 16" fill="none">
